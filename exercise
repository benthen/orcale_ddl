CREATE TABLE CUSTOMERS1
(
    CUSTOMER_ID NUMBER,
    NAME VARCHAR2(255),
    ADDRESS VARCHAR2(255),
    WEBSITE VARCHAR2(255),
    CREDIT_LIMIT NUMBER,
    CONSTRAINT CUSTOMER_ID_PK PRIMARY KEY (CUSTOMER_ID)
);

CREATE TABLE ORDERS1
(
    ORDER_ID NUMBER,
    CUSTOMER_ID NUMBER,
    STATUS VARCHAR2(10),
    SALESMAN_ID NUMBER,
    ORDER_DATE DATE,
    CONSTRAINT ORDER_ID_PK PRIMARY KEY (ORDER_ID),
    CONSTRAINT CUSTOMER_IF_FK FOREIGN KEY (CUSTOMER_ID) REFERENCES CUSTOMERS1
);

CREATE TABLE REGIONS1
(
    REGION_ID NUMBER,
    REGION_NAME VARCHAR2(255),
    CONSTRAINT REGION_ID_PK PRIMARY KEY (REGION_ID)
);

CREATE TABLE CONTACTS1
(
    CONTACT_ID NUMBER,
    FIRST_NAME VARCHAR2(255),
    LAST_NAME VARCHAR2(255),
    EMAIL VARCHAR2(255),
    PHONE VARCHAR2(255),
    CUSTOMER_ID NUMBER,
    CONSTRAINT CONTACT_ID_PK PRIMARY KEY (CONTACT_ID),
    CONSTRAINT CUSTOMER_ID_FK FOREIGN KEY (CUSTOMER_ID) REFERENCES CUSTOMERS1
);

CREATE TABLE MANAGER1
(
    MANAGER_ID NUMBER,
    NAME VARCHAR2(255),
    CONSTRAINT MANAGER_ID_PK PRIMARY KEY (MANAGER_ID)
);

CREATE TABLE EMPLOYEES1
(
    EMPLOYEE_ID NUMBER,
    FIRST_NAME VARCHAR2(255),
    LAST_NAME VARCHAR2(255),
    EMAIL VARCHAR2(255),
    PHONE VARCHAR2(255),
    HIRE_DATE DATE,
    MANAGER_ID NUMBER,
    JOB_TITLE VARCHAR2(255),
    CONSTRAINT EMPLOYEE_ID_PK PRIMARY KEY (EMPLOYEE_ID),
    CONSTRAINT EMPLOYEE_ID_FK FOREIGN KEY (EMPLOYEE_ID) REFERENCES MANAGER1
);

ALTER TABLE ORDERS1 ADD CONSTRAINT SALESMAN_ID_FK FOREIGN KEY (SALESMAN_ID) REFERENCES EMPLOYEES1;

CREATE TABLE PRODUCT_CATEGORIES1
(
    CATEGORY_ID NUMBER,
    CATEGORY_NAME VARCHAR2(255),
    CONSTRAINT CATEGORY_ID_PK PRIMARY KEY (CATEGORY_ID)
);

CREATE TABLE PRODUCTS1
(
    PRODUCT_ID NUMBER,
    PRODUCT_NAME VARCHAR2(255),
    PRODUCT_DESCRIPTION VARCHAR2(255),
    STANDARD_COST NUMBER,
    LIST_PRICE NUMBER,
    CATEGORY_ID NUMBER,
    CONSTRAINT PRODUCT_ID_PK PRIMARY KEY (PRODUCT_ID),
    CONSTRAINT PRODUCT_DESCRIPTION_PK PRIMARY KEY (PRODUCT_DESCRIPTION),
    CONSTRAINT PRODUCT_DESCRIPTION_FK FOREIGN KEY (PRODUCT_DESCRIPTION) REFERENCES PRODUCT_CATEGORIES1
);

CREATE TABLE DESCRIPTION
(
    DESCRIPTION_ID
);

CREATE TABLE COUNTRIES1
(
    COUNTRY_ID NUMBER,
    COUNTRY_NAME VARCHAR2(255),
    REGION_ID NUMBER,
    CONSTRAINT COUNTRY_ID_PK PRIMARY KEY (COUNTRY_ID),
    CONSTRAINT REGION_ID_FK FOREIGN KEY (REGION_ID) REFERENCES REGIONS1
);

CREATE TABLE LOCATIONS1
(
    LOCATION_ID NUMBER,
    ADDRESS VARCHAR2(255),
    POSTAL_CODE NUMBER,
    CITY VARCHAR2(255),
    STATE VARCHAR2(255),
    COUNTRY_ID NUMBER,
    CONSTRAINT LOCATION_ID_PK PRIMARY KEY (LOCATION_ID),
    CONSTRAINT COUNRTY_ID_FK FOREIGN KEY (COUNTRY_ID) REFERENCES COUNTRIES
);

CREATE TABLE WAREHOUSES1
(
    WAREHOUSE_ID NUMBER,
    WAREHOUSE_NAME VARCHAR2(255),
    LOCATION_ID NUMBER,
    CONSTRAINT WAREHOUSE_ID_PK PRIMARY KEY (WAREHOUSE_ID),
    CONSTRAINT LOCATION_ID_FK FOREIGN KEY (LOCATION_ID) REFERENCES LOCATIONS1
);

CREATE TABLE INVENTORIES1
(
    PRODUCT_ID NUMBER,
    WAREHOUSE_ID NUMBER,
    QUANTITY NUMBER,
    CONSTRAINT PRODUCT_ID_PK PRIMARY KEY (PRODUCT_ID),
    CONSTRAINT PRODUCT_ID_FK FOREIGN KEY (PRODUCT_ID) REFERENCES WAREHOUSES1,
    CONSTRAINT WAREHOUSE_ID_FK FOREIGN KEY (WAREHOUSE_ID) REFERENCES PRODUCTS1
);
