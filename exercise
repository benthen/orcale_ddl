CREATE TABLE CUSTOMERS1
(
    CUSTOMER_ID NUMBER,
    NAME VARCHAR2(255),
    ADDRESS VARCHAR2(255),
    WEBSITE VARCHAR2(255),
    CREDIT_LIMIT NUMBER,
    CONSTRAINT CUSTOMER_ID_PK PRIMARY KEY (CUSTOMER_ID)
);

CREATE TABLE REGIONS1
(
    REGION_ID NUMBER,
    REGION_NAME VARCHAR2(255),
    CONSTRAINT REGION_ID_PK PRIMARY KEY (REGION_ID)
);

CREATE TABLE CONTACTS1
(
    CONTACT_ID NUMBER,
    FIRST_NAME VARCHAR2(255),
    LAST_NAME VARCHAR2(255),
    EMAIL VARCHAR2(255),
    PHONE VARCHAR2(255),
    CUSTOMER_ID NUMBER,
    CONSTRAINT CONTACT_ID_PK PRIMARY KEY (CONTACT_ID),
    CONSTRAINT CUSTOMER_ID_FK FOREIGN KEY (CUSTOMER_ID) REFERENCES CUSTOMERS1(CUSTOMER_ID)
);

CREATE TABLE EMPLOYEES1
(
    EMPLOYEE_ID NUMBER,
    FIRST_NAME VARCHAR2(255),
    LAST_NAME VARCHAR2(255),
    EMAIL VARCHAR2(255),
    PHONE VARCHAR2(255),
    HIRE_DATE DATE,
    MANAGER_ID NUMBER,
    JOB_TITLE VARCHAR2(255),
    CONSTRAINT EMPLOYEE_ID_PK PRIMARY KEY (EMPLOYEE_ID),
    CONSTRAINT EMPLOYEE_ID_FK FOREIGN KEY (MANAGER_ID) REFERENCES EMPLOYEES1(EMPLOYEE_ID)
);

CREATE TABLE ORDERS1
(
    ORDER_ID NUMBER,
    CUSTOMER_ID NUMBER,
    STATUS VARCHAR2(10),
    SALESMAN_ID NUMBER,
    ORDER_DATE DATE,
    CONSTRAINT ORDER_ID_PK PRIMARY KEY (ORDER_ID),
    CONSTRAINT CUSTOMER_IF_FK FOREIGN KEY (CUSTOMER_ID) REFERENCES CUSTOMERS1(CUSTOMER_ID),
    CONSTRAINT SALESMAN_ID_FK FOREIGN KEY (SALESMAN_ID) REFERENCES EMPLOYEES(EMPLOYEE_ID)
);

CREATE TABLE PRODUCT_CATEGORIES1
(
    CATEGORY_ID NUMBER,
    CATEGORY_NAME VARCHAR2(255),
    CONSTRAINT CATEGORY_ID_PK PRIMARY KEY (CATEGORY_ID)
);

CREATE TABLE PRODUCTS1
(
    PRODUCT_ID NUMBER,
    PRODUCT_NAME VARCHAR2(255),
    PRODUCT_DESCRIPTION NUMBER,
    STANDARD_COST NUMBER,
    LIST_PRICE NUMBER,
    CATEGORY_ID NUMBER,
    CONSTRAINT PRODUCT_ID_PK PRIMARY KEY (PRODUCT_ID),
    CONSTRAINT PRODUCT_DESCRIPTION_FK FOREIGN KEY (CATEGORY_ID) REFERENCES PRODUCT_CATEGORIES1(CATEGORY_ID)
);

CREATE TABLE ORDER_ITEMS
(
    ORDER_ID NUMBER,
    ITEM_ID NUMBER,
    PRODUCT_ID NUMBER,
    QUANTITY NUMBER,
    UNIT_PRICE NUMBER,
    CONSTRAINT ORDER_ITEM_ID_PK PRIMARY KEY (ORDER_ID, PRODUCT_ID),
    CONSTRAINT ORDER_ID_FK FOREIGN KEY (ORDER_ID) REFERENCES ORDERS1(ORDER_ID),
    CONSTRAINT PRODUCT_ID_FK FOREIGN KEY (PRODUCT_ID) REFERENCES PRODUCTS1(PRODUCT_ID)
);

CREATE TABLE COUNTRIES1
(
    COUNTRY_ID NUMBER,
    COUNTRY_NAME VARCHAR2(255),
    REGION_ID NUMBER,
    CONSTRAINT COUNTRY_ID_PK PRIMARY KEY (COUNTRY_ID),
    CONSTRAINT REGION_ID_FK FOREIGN KEY (REGION_ID) REFERENCES REGIONS1(REGION_ID)
);

CREATE TABLE LOCATIONS1
(
    LOCATION_ID NUMBER,
    ADDRESS VARCHAR2(255),
    POSTAL_CODE NUMBER,
    CITY VARCHAR2(255),
    STATE VARCHAR2(255),
    COUNTRY_ID NUMBER,
    CONSTRAINT LOCATION_ID_PK PRIMARY KEY (LOCATION_ID),
    CONSTRAINT COUNRTY_ID_FK FOREIGN KEY (COUNTRY_ID) REFERENCES COUNTRIES1(COUNTRY_ID)
);

CREATE TABLE WAREHOUSES1
(
    WAREHOUSE_ID NUMBER,
    WAREHOUSE_NAME VARCHAR2(255),
    LOCATION_ID NUMBER,
    CONSTRAINT WAREHOUSE_ID_PK PRIMARY KEY (WAREHOUSE_ID),
    CONSTRAINT LOCATION_ID_FK FOREIGN KEY (LOCATION_ID) REFERENCES LOCATIONS1(LOCATION_ID)
);

CREATE TABLE INVENTORIES1
(
    PRODUCT_ID NUMBER,
    WAREHOUSE_ID NUMBER,
    QUANTITY NUMBER,
    CONSTRAINT PRODUCT_WAREHOUSE_ID_PK PRIMARY KEY (PRODUCT_ID, WAREHOUSE_ID),
    CONSTRAINT INVENTORIES_PRODUCT_ID_FK FOREIGN KEY (PRODUCT_ID) REFERENCES WAREHOUSES1(WAREHOUSE_ID),
    CONSTRAINT INVENTORIES_WAREHOUSE_ID_FK FOREIGN KEY (WAREHOUSE_ID) REFERENCES PRODUCTS1(PRODUCT_ID)
);


